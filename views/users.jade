extends layout

block content
  h1 Add User
  form(action='/users', method='post').pure-form.pure-form-stacked
    input(type='text', name='id', placeholder='ID')
    input(type='text', name='password', placeholder='Password')
    input(type='submit', value='Register').pure-button
  include includes/alert
  h1 User Listing
  p #{users.length} user(s)
  table.pure-table
    thead
      tr
        td id
        td password
        td created_at
    each user in users
      tbody
        tr
          td
            a(href='bookmarks?u=#{user.id}') #{user.id}
          td ******
          td #{dateformat(user.created_at, 'yyyy-mm-dd hh:MM:ss')}

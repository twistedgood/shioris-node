extends layout

block content
  if errors
    ul
    each error in errors
      li #{error}
  h1 Add User
    form(action='/users', method='post')
      input(type='text', name='id', placeholder='id')
      br
      input(type='text', name='name', placeholder='name')
      br
      input(type='submit', value='Register')
  h1 User Listing
  p #{users.length} user(s)
  table
    tr
      td id
      td name
      td created_at
    each user in users
      tr
        td #{user.id}
        td #{user.name}
        td #{dateformat(user.created_at, 'yyyy-mm-dd hh:MM:ss')}
